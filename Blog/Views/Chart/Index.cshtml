    <div id="articleChart" style="width:600px; height: 400px;"></div>
    <script type="text/javascript">
        //初始化echarts实例
        var myChart = echarts.init(document.getElementById('articleChart'));
        var cates = new Array();
        var array = @Html.Raw(Json.Encode(@ViewBag.cates));
        for(var i =0; i<array.length;i++){
            cates[i] = array[i];
        }
        var arts = new Array();
        var array = @Html.Raw(Json.Encode(ViewBag.articles));
        for(var i =0; i<array.length;i++){
            arts[i] = array[i];
        }
        var data = new Array();
        data.push(cates);
        data.push(arts);
        //指定图标的配置和数据
        var option = {
            title: {
                text: '所有文章分类信息'
            },
            tooltip: {},
            legend: {
                data: ['数目']
            },
            xAxis: {
                data: cates
            },
            yAxis: {},
            series: [{
                name: '销量',
                type: 'bar',
                data: arts
            }]
        };

        myChart.setOption(option);
    </script>